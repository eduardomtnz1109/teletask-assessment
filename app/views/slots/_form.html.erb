<%= form_with(model: slot, local: true) do |form| %>
  <% if slot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(slot.errors.count, 'error') %> prohibited this slot from being saved:</h2>

      <ul>
        <% slot.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :start_time, 'Start Time' %>
    <%= form.datetime_local_field :start_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :end_time, 'End Time' %>
    <%= form.datetime_local_field :end_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Create Slot', class: 'btn btn-primary' %>
  </div>
<% end %>
